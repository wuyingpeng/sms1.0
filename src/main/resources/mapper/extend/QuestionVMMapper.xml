<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.app02.dao.extend.QuestionVMMapper">
  <!-- 查询所有班级信息 id,name,questiontype  -->
  <!-- 
  	QuestionVM 
  	column - property	
  	id-id,
  	name-name,
  	questiontype-questiontype
  	
  -->
  <select id="findAllQuestionVM" resultMap="QuestionVMResultMap">
    select * from poll_question
  </select>
  
  <resultMap type="com.briup.app02.vm.QuestionVM" id="QuestionVMResultMap">
  	<id column="id" property="id"/>
  	<result column="name" property="name"/>
  	<result column="questiontype" property="questiontype"/>
  	<collection 
  	column="id" 
  	property="options"
  	select="com.briup.app02.dao.OptionMapper.findByQuestionId">
  	</collection>
  	
  </resultMap>
  
  
  <select id="findById" parameterType="long" resultType="com.briup.app02.bean.Question">
    select * from poll_question where id = #{id}
  </select>
  <delete id="deleteById" parameterType="long" >
    delete from poll_question where id = #{id}
  </delete>
  <insert id="save" parameterType="com.briup.app02.bean.Question">
    insert into poll_question values (null,#{name},#{questiontype})
  </insert>
  <update id="update" parameterType="com.briup.app02.bean.Question">
    update poll_question 
    set name=#{name},questiontype=#{questiontype}
     where  id=#{id}
  </update>
</mapper>